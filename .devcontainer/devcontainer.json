// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.154.0/containers/python-3
{
	"name": "LedFX Android",
	"image": "kivy/buildozer",

	// Use volume mount to share android build env between devcontainers.
	// Build files will be written to this volume, which is significantly faster 
	// than a bind mount (default for VS Code)
	"mounts": [
		"type=volume,src=buildozer,dst=/home/user/.buildozer"
	],

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-python.python"
	],

	"remoteUser": "user"

}
